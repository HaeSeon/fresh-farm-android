<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".user.login.LoginActivity">


    <FrameLayout
        android:id="@+id/selectLivestockListContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userLoginLogoImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="103dp"
        android:src="@drawable/fresh_farm_logo"
        app:layout_constraintBottom_toTopOf="@+id/userLoginEmailInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userLoginEmailIcon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_mail_outline_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/userLoginPassInput"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/userLoginEmailInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="E-MAIL"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/userLoginPassInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userLoginPassIcon" />

    <ImageView
        android:id="@+id/userLoginPassIcon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_vpn_key_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/userLoginSignUpButton"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/userLoginPassInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/userLoginSignUpButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userLoginPassIcon" />


    <Button
        android:id="@+id/userLoginSignUpButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_black_line"
        android:text="회원가입"
        app:layout_constraintBottom_toTopOf="@+id/userLoginLostEmailButton"
        app:layout_constraintEnd_toStartOf="@+id/userLoginButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/userLoginButton"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_black_line"
        android:text="Login"
        app:layout_constraintBottom_toTopOf="@+id/userLoginLostPassButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userLoginSignUpButton" />

    <Button
        android:id="@+id/userLoginLostEmailButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="64dp"
        android:background="#00FF0000"
        android:text="이메일 찾기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/userLoginLostPassButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/userLoginLostPassButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="64dp"
        android:background="#00FF0000"
        android:text="비밀번호 찾기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userLoginLostEmailButton" />


</androidx.constraintlayout.widget.ConstraintLayout>