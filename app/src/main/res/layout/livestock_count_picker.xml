<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".livestock.select.LivestockCountPickerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/livestockCountPickerDialogContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_black_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/livestockCountPickerIcon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="54dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="106dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/background_round_unselected"
            android:src="@drawable/cow_white"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/livestockCountPickerDialogContainer"
            app:layout_constraintEnd_toEndOf="@id/livestockCountPickerDialogContainer"
            app:layout_constraintStart_toStartOf="@id/livestockCountPickerDialogContainer"
            app:layout_constraintTop_toTopOf="@id/livestockCountPickerDialogContainer" />

        <NumberPicker
            android:id="@+id/livestockCountPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/livestockCountPickerIcon"
            app:layout_constraintStart_toEndOf="@+id/livestockCountPickerIcon"
            app:layout_constraintTop_toTopOf="@+id/livestockCountPickerIcon" />

        <TextView
            android:id="@+id/livestockCountPickerConfirm"
            style="@style/title_md"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="확인"
            app:layout_constraintEnd_toEndOf="@id/livestockCountPickerDialogContainer"
            app:layout_constraintStart_toStartOf="@id/livestockCountPickerDialogContainer"
            app:layout_constraintTop_toBottomOf="@+id/livestockCountPickerIcon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>