<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/vertical_unit_sm_height">

<ImageView
    android:id="@+id/search_confirm_item_icon"
    android:layout_width="@dimen/icon_sm"
    android:layout_height="@dimen/icon_sm"
    android:layout_marginStart="16dp"
    android:tint="@color/colorPrimaryLight"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/cow_white" />

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/search_confirm_item_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/search_confirm_item_icon"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/search_confirm_item_title"
        style="@style/plain_text_md"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="구제역"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_confirm_item_location"
        style="@style/plain_text_sm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울시 영등포구 문래동"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_confirm_item_title" />

</androidx.constraintlayout.widget.ConstraintLayout>

<TextView
    android:id="@+id/search_confirm_item_date"
    style="@style/plain_text_sm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="24dp"
    android:text="2020/7/19"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
