<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF9A8F</item>
        <item name="colorPrimaryDark">#FF6166</item>
        <item name="colorAccent">#FFE0AD</item>
    </style>

    <style name="title_lg">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="title_md">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="title_sm">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="livestock_icon">
        <item name="background">@drawable/background_primary_circle_md</item>
    </style>


    <style name="information_title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="information_sub_title">
        <item name="android:textColor">@color/colorNormalDark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="information_content"></style>

    <style name="plain_text_md">
        <item name="android:textColor">@color/colorNormalDark</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="plain_text_lg">
        <item name="android:textColor">@color/colorNormalDark</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="plain_text_sm">
        <item name="android:textColor">@color/colorNormalDark</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="plain_text_xs">
        <item name="android:textColor">@color/colorNormalDark</item>
        <item name="android:textSize">12dp</item>
    </style>


    <style name="alert_warning">
        <item name="android:textColor">@color/colorWarningDark</item>
        <item name="android:tint">@color/colorWarningDark</item>
    </style>

    <style name="alert_caution">
        <item name="android:textColor">@color/colorCautionDark</item>
        <item name="android:tint">@color/colorCautionDark</item>
    </style>

    <style name="alert_normal">
        <item name="android:textColor">@color/colorNormalDark</item>
        <item name="android:tint">@color/colorNormalDark</item>
    </style>
</resources>
